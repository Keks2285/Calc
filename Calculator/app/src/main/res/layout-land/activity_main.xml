<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/TL1"
        android:layout_width="389dp"
        android:layout_height="170dp"
        android:layout_margin="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>


            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="1" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="2" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                android:onClick="onClick"
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow>


            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="4" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="5" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="6" />

            <Button
                android:text="-"
                android:id="@+id/minus"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow>


            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="7" />

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="8" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="9" />

            <Button
                android:text="*"
                android:id="@+id/umn"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:text="/"
        android:id="@+id/del"
        android:onClick="onClick"
        android:layout_width="82dp"
        android:layout_height="39dp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/clear1"
        app:layout_constraintTop_toBottomOf="@id/TL1" />

    <Button
        android:id="@+id/ravno"
        android:layout_width="208dp"
        android:layout_height="39dp"
        android:layout_margin="5dp"
        android:onClick="Ravno"
        android:text="="
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/TL1"
        app:layout_constraintTop_toBottomOf="@id/TL1"

        />

    <TextView
        android:textSize="20dp"
        android:id="@+id/tV"
        android:layout_width="532dp"
        android:layout_height="82dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/gray"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/clear1"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:onClick="ClearAll"
        android:text="C"
        app:layout_constraintStart_toEndOf="@id/ravno"
android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/ravno"


        />


</androidx.constraintlayout.widget.ConstraintLayout>